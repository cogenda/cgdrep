\newcommand\rndcg{
\begin{tikzpicture}[scale=2.6,remember picture, overlay]
  \foreach \y in {1,0,...,-30} {
      \foreach \x in {-1,0,...,20} {
          \pgfmathparse{0.2*rnd+0.75}
          \definecolor{rndc}{rgb}{\pgfmathresult,\pgfmathresult,0.9}
          \path[fill=rndc] (\x,\y) rectangle ++(1,1); 
      }
  }
