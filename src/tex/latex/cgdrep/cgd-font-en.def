% cgd-font-en.def : western font definitions
% vim:ft=tex

%%%% Font definition
\setmainfont{STIXGeneral}
\setmathfont{xits-math.otf}
\setmathfont[range=\mathup/{num,latin,Latin,greek,Greek}]{STIXGeneral}
\setmathfont[range=\int]{xits-math.otf}
\setsansfont{DejaVu Sans}
\setmonofont[
  ItalicFont={M+ 1m regular},
  ItalicFeatures = {FakeSlant=0.2},
  BoldFont={M+ 1m medium},
  BoldItalicFont={M+ 1m medium},
  BoldItalicFeatures = {FakeSlant=0.2}
]{M+ 1m regular}


